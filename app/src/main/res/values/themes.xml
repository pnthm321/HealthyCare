<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HealthyCare" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HealthyCare.EditText">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:background">@drawable/edit_text_custom</item>
        <item name="android:paddingStart">50dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Theme.HealthyCare.BottomNavigationLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Theme.HealthyCare.EditTextSign">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:background">@drawable/edit_text_sign</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Theme.HealthyCare.EditTextAccount">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:background">@drawable/edit_text_account</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>